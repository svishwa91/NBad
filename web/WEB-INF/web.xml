<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>XSSFilter</filter-name>
        <filter-class>com.assignment4.security.XSSFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SaltFilter</filter-name>
        <filter-class>com.assignment4.security.SaltFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ValidateSaltFilter</filter-name>
        <filter-class>com.assignment4.security.ValidateSaltFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XSSFilter</filter-name>
        <url-pattern>/UserController</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XSSFilter</filter-name>
        <url-pattern>/StudyController</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SaltFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidateSaltFilter</filter-name>
        <url-pattern>/UserController</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidateSaltFilter</filter-name>
        <url-pattern>/StudyController</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
